<Page x:Class="MyAppWPF.MantenimientoTransportistas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyAppWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Mantenimiento - Transportistas">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <TextBlock Text="Mantenimiento - Transportistas" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="Nuevo" Width="100" Height="30" Background="#3498db" Foreground="White"/>
                    <Button Content="Editar" Width="100" Height="30" Margin="10,0" Background="#f39c12" Foreground="White"/>
                    <Button Content="Eliminar" Width="100" Height="30" Background="#e74c3c" Foreground="White"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBox Width="200" Height="30" Margin="0,0,5,0" VerticalContentAlignment="Center"/>
                    <Button Content="Buscar" Width="80" Height="30" Background="#2c3e50" Foreground="White"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        
        <DataGrid Grid.Row="1" Margin="20,10,20,20" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="80" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Nombre" Width="200" Binding="{Binding Nombre}"/>
                <DataGridTextColumn Header="RUC/DNI" Width="120" Binding="{Binding Documento}"/>
                <DataGridTextColumn Header="Dirección" Width="200" Binding="{Binding Direccion}"/>
                <DataGridTextColumn Header="Teléfono" Width="120" Binding="{Binding Telefono}"/>
                <DataGridTextColumn Header="Estado" Width="100" Binding="{Binding Estado}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

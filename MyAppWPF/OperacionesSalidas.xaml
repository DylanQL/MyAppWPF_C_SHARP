<Page x:Class="MyAppWPF.OperacionesSalidas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyAppWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Operaciones - Salidas">

    <Grid Background="White">
        <StackPanel Margin="20">
            <TextBlock Text="Operaciones - Salidas" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <Border BorderBrush="#ddd" BorderThickness="1" Padding="15" CornerRadius="5" Background="#f9f9f9">
                <StackPanel>
                    <TextBlock Text="Datos de la Salida" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Fecha:" Margin="0,5,0,2"/>
                            <DatePicker Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Transportista:" Margin="0,5,0,2"/>
                            <ComboBox Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Conductor:" Margin="0,5,0,2"/>
                            <ComboBox Margin="0,0,0,10"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="CamiÃ³n:" Margin="0,5,0,2"/>
                            <ComboBox Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Producto:" Margin="0,5,0,2"/>
                            <ComboBox Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Cantidad:" Margin="0,5,0,2"/>
                            <TextBox Margin="0,0,0,10"/>
                        </StackPanel>
                    </Grid>
                    
                    <TextBlock Text="Destino:" Margin="0,5,0,2"/>
                    <TextBox Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Observaciones:" Margin="0,5,0,2"/>
                    <TextBox Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,15"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancelar" Width="100" Height="30" Margin="0,0,10,0"/>
                        <Button Content="Guardar" Width="100" Height="30" Background="#27ae60" Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>

<Window x:Class="MyAppWPF.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyAppWPF"
        mc:Ignorable="d"
        Title="Sistema de Gestión" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="SubMenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="15,5,5,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="#2980b9"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu Panel -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#2c3e50">
            <StackPanel Margin="10">
                <TextBlock Text="Menú Principal" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,10,0,20" HorizontalAlignment="Center"/>
                
                <!-- Operaciones -->
                <Expander Header="Operaciones" Foreground="White" IsExpanded="False">
                    <StackPanel>
                        <Button Content="Ingresos" Style="{StaticResource SubMenuButtonStyle}" Click="btnIngresos_Click"/>
                        <Button Content="Salida" Style="{StaticResource SubMenuButtonStyle}" Click="btnSalidas_Click"/>
                    </StackPanel>
                </Expander>
                
                <!-- Mantenimientos -->
                <Expander Header="Mantenimientos" Foreground="White" IsExpanded="False" Margin="0,10,0,0">
                    <StackPanel>
                        <Button Content="Conductores" Style="{StaticResource SubMenuButtonStyle}" Click="btnConductores_Click"/>
                        <Button Content="Transportistas" Style="{StaticResource SubMenuButtonStyle}" Click="btnTransportistas_Click"/>
                        <Button Content="Camiones" Style="{StaticResource SubMenuButtonStyle}" Click="btnCamiones_Click"/>
                        <Button Content="Productos" Style="{StaticResource SubMenuButtonStyle}" Click="btnProductos_Click"/>
                    </StackPanel>
                </Expander>
                
                <!-- Reportes -->
                <Expander Header="Reportes" Foreground="White" IsExpanded="False" Margin="0,10,0,0">
                    <StackPanel>
                        <Button Content="Cargas" Style="{StaticResource SubMenuButtonStyle}" Click="btnReporteCargas_Click"/>
                        <Button Content="Ingresos" Style="{StaticResource SubMenuButtonStyle}" Click="btnReporteIngresos_Click"/>
                        <Button Content="Salidas" Style="{StaticResource SubMenuButtonStyle}" Click="btnReporteSalidas_Click"/>
                    </StackPanel>
                </Expander>
                
                <Button Content="Cerrar Sesión" Style="{StaticResource MenuButtonStyle}" Margin="0,30,0,0" Click="btnCerrarSesion_Click" Background="#e74c3c"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Content Area -->
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Background="#ecf0f1"/>
    </Grid>
</Window>
